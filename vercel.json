{
  "version": 2,
  "builds": [
    { "src": "*.html",    "use": "@vercel/static" },
    { "src": "css/**",    "use": "@vercel/static" },
    { "src": "js/**",     "use": "@vercel/static" },
    { "src": "assets/**", "use": "@vercel/static" }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/index.html"
    },
    {
      "src": "/about",
      "dest": "/about.html"
    },
    {
      "src": "/certificates",
      "dest": "/certificates.html"
    },
    {
      "src": "/services",
      "dest": "/services.html"
    },
    {
      "src": "/faqs",
      "dest": "/faqs.html"
    },
    {
      "src": "/gallery",
      "dest": "/gallery.html"
    },
    {
      "src": "/contact",
      "dest": "/contact.html"
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false
}
